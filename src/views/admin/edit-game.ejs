<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Sửa Game: <%= game.title %></title>
    <style>
        body { font-family: sans-serif; padding: 20px; max-width: 600px; margin: auto; }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; font-weight: bold; }
        input, textarea { width: 100%; padding: 8px; box-sizing: border-box; }
        button { padding: 10px 20px; background-color: #007bff; color: white; border: none; cursor: pointer; }
        button:hover { background-color: #0056b3; }
    </style>
</head>
<body>
    <h1>Sửa Game: <%= game.title %></h1>
    
    
    <form action="/admin/edit/<%= game._id %>" method="POST">
        
        <div class="form-group">
            <label>Tên Game</label>
            <input type="text" name="title" value="<%= game.title %>" required>
        </div>

        <div class="form-group">
            <label>Link Ảnh (URL)</label>
            <input type="text" name="imageUrl" value="<%= game.imageUrl %>">
        </div>

        <div class="form-group">
            <label>Giá ($)</label>
            <input type="number" name="price" value="<%= game.price %>" required step="0.01">
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea name="description" rows="4"><%= game.description %></textarea>
        </div>

        <div class="form-group">
            <label>Thể loại</label>
            <select name="category" style="width: 100%; padding: 10px; border-radius: 5px;">
                <% 
                const cats = ["Hành động", "Nhập vai (RPG)", "Thể thao", "Chiến thuật", "Kinh dị", "Phiêu lưu", "Mô phỏng", "MOBA"];
                cats.forEach(c => { 
                %>
                    <option value="<%= c %>" <%= game.category === c ? 'selected' : '' %>><%= c %></option>
                <% }) %>
            </select>
        </div>

        <button type="submit">Lưu Thay Đổi</button>
    </form>

    <p><a href="/">Hủy bỏ, quay lại</a></p>
</body>
</html>